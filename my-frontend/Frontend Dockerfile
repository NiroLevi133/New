# Frontend Dockerfile
FROM node:18-alpine AS build

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

FROM node:18-alpine
WORKDIR /app
COPY package*.json ./
RUN npm install --only=production
COPY --from=build /app/dist ./dist
COPY vite.config.js ./

EXPOSE 8080
ENV PORT=8080
CMD npm run preview -- --host 0.0.0.0 --port $PORT